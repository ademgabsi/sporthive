{% extends 'base.html.twig' %}

{% block title %}Tournoi index{% endblock %}

{% block body %}
    <div class="tournament-container">
        <div class="tournament-header">
            <h1 class="tournament-title">
                <span class="title-gradient">Tournois</span> 
            </h1>
            
        </div>
        
        {% if tournois is empty %}
            <div class="empty-state">
                <h3>No Tournois found</h3>
            </div>
        {% else %}
            <div class="tournament-grid">
                {% for tournoi in tournois %}
                    <div class="tournament-card">
                        <div class="card-gradient-border">
                            <div class="card-content">
                                <div class="card-header">
                                    <div class="tournament-badge">{{ tournoi.competition.Nom }}</div>
                                    <div class="date-range">
                                        <span class="date">{{ tournoi.dateDebut ? tournoi.dateDebut|date('M d') : '' }}</span>
                                        <span class="separator">→</span>
                                        <span class="date">{{ tournoi.dateFin ? tournoi.dateFin|date('M d, Y') : '' }}</span>
                                    </div>
                                </div>
                                
                                <h2 class="tournament-name">{{ tournoi.nom }}</h2>
                                
                                <div class="location">
                                    <svg class="location-icon" viewBox="0 0 24 24">
                                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                                    </svg>
                                    {{ tournoi.lieu }}
                                </div>
                              
                                
                                <div class="card-footer">
                                    <a href="{{ path('app_tournoi_show', {'id': tournoi.id}) }}" class="action-btn">
                                        détails
                                        <svg class="arrow-icon" viewBox="0 0 24 24">
                                            <path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}