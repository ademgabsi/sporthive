{% if is_granted('ROLE_ADMIN') %}
    <form method="post" action="{{ path('app_tournoi_delete', {'id': tournoi.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tournoi ?');" class="d-inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tournoi.id) }}">
        <button class="btn btn-delete">Supprimer</button>
    </form>
{% endif %}
