{% extends 'base.html.twig' %}

{% block title %}Matchs disponibles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .match_section {
            padding: 80px 0;
            background-color: #0f172a;
            min-height: calc(100vh - 200px);
            position: relative;
            overflow: hidden;
        }
        
        .match_section::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background: 
                radial-gradient(circle at 30% 20%, rgba(99, 102, 241, 0.15) 0%, rgba(99, 102, 241, 0) 50%),
                radial-gradient(circle at 70% 80%, rgba(99, 102, 241, 0.1) 0%, rgba(99, 102, 241, 0) 50%);
            pointer-events: none;
        }

        .heading_container {
            text-align: center;
            margin-bottom: 60px;
            position: relative;
            z-index: 1;
        }

        .heading_container h2 {
            font-size: 3rem;
            font-weight: 800;
            color: #fff;
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
            text-transform: uppercase;
            letter-spacing: -1px;
            background: linear-gradient(to right, #818cf8, #6366f1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
        }

        .heading_container h2:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(to right, #818cf8, #6366f1);
            border-radius: 3px;
            opacity: 0.8;
        }

        .heading_container p {
            color: #94a3b8;
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.8;
            letter-spacing: 0.2px;
            margin-top: 1.5rem;
        }

        .card {
            border: 1px solid rgba(148, 163, 184, 0.1);
            border-radius: 1rem;
            background: rgba(30, 41, 59, 0.5);
            backdrop-filter: blur(10px);
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            height: 100%;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                      0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        .card:hover {
            transform: translateY(-5px);
            border-color: rgba(99, 102, 241, 0.5);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2),
                      0 0 15px rgba(99, 102, 241, 0.3);
        }

        .card-body {
            padding: 1.8rem;
        }

        .card-title {
            color: #fff;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            letter-spacing: -0.5px;
        }

        .card-subtitle {
            color: #818cf8;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .card-text {
            color: #94a3b8;
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 1rem 0;
            letter-spacing: 0.2px;
        }

        .match-details {
            background: rgba(30, 41, 59, 0.3);
            padding: 1.25rem;
            border-radius: 0.75rem;
            margin: 1.25rem 0;
            border: 1px solid rgba(148, 163, 184, 0.1);
        }

        .match-details p {
            margin-bottom: 0.75rem;
            color: #94a3b8;
            font-size: 0.95rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .match-details i {
            color: #818cf8;
            width: 20px;
            text-align: center;
            font-size: 1rem;
            opacity: 0.9;
        }

        .btn-primary {
            background: linear-gradient(135deg, #818cf8 0%, #6366f1 100%);
            border: none;
            padding: 0.75rem 2rem;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-radius: 9999px;
            transition: all 0.3s ease;
            color: #fff;
            box-shadow: 0 4px 6px rgba(99, 102, 241, 0.2);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(99, 102, 241, 0.3);
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        }

        .alert-info {
            background: rgba(99, 102, 241, 0.1);
            border: 1px solid rgba(99, 102, 241, 0.2);
            color: #94a3b8;
            padding: 1.5rem;
            border-radius: 1rem;
            font-size: 1.1rem;
            text-align: center;
            margin: 2rem 0;
            backdrop-filter: blur(10px);
        }
    </style>
{% endblock %}


{% block body %}
    <!-- match section -->
    <section class="match_section">
        <div class="container">
            <div class="heading_container">
                <h2>Nos Matchs</h2>
                <p>Découvrez tous les matchs disponibles</p>
                <div class="mt-4">
    <a href="{{ path('app_match_front_calendar') }}" class="btn btn-primary">
        <i class="far fa-calendar-alt"></i> Voir le calendrier des matchs
    </a>
</div>
            </div>
            <div class="row">
                {% for match in matches %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ match.nom }}</h5>
                                <h6 class="card-subtitle mb-2">{{ match.type }}</h6>
                                <p class="card-text">{{ match.description }}</p>
                                <div class="match-details">
                                    <p><i class="far fa-calendar-alt"></i> {{ match.date ? match.date|date('d/m/Y') : '' }}</p>
                                    <p><i class="far fa-clock"></i> {{ match.heure ? match.heure|date('H:i') : '' }}</p>
                                </div>
                                <div class="text-center mt-3">
                                    <a href="{{ path('app_match_front_show', {'id': match.id}) }}" class="btn btn-primary">
                                        Voir les détails
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center">
                        <div class="alert alert-info">
                            Aucun match n'est disponible pour le moment.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- end match section -->
{% endblock %}
