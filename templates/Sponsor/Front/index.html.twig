{% extends 'base.html.twig' %}

{% block title %}Nos Sponsors{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sponsor_section {
            padding: 80px 0;
            background-color: #0f172a;
            min-height: calc(100vh - 200px);
            position: relative;
            overflow: hidden;
        }

        .sponsor_section::before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            background: radial-gradient(circle at 50% 50%, rgba(99, 102, 241, 0.15) 0%, rgba(99, 102, 241, 0) 50%);
            pointer-events: none;
        }

        .layout_padding {
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

        .heading_container {
            text-align: center;
            margin-bottom: 3rem;
        }

        .heading_container h2 {
            font-size: 3rem;
            font-weight: 800;
            color: #fff;
            margin-bottom: 1rem;
            position: relative;
            display: inline-block;
            text-transform: uppercase;
            letter-spacing: -1px;
            background: linear-gradient(to right, #818cf8, #6366f1);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0 0 30px rgba(99, 102, 241, 0.3);
        }

        .heading_container h2:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 70%;
            height: 3px;
            background: linear-gradient(135deg, #3498db, #2980b9);
            border-radius: 3px;
        }

        .heading_container p {
            color: #94a3b8;
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
            line-height: 1.8;
            letter-spacing: 0.2px;
        }

        .card {
            border: 1px solid rgba(148, 163, 184, 0.1);
            border-radius: 1rem;
            background: rgba(30, 41, 59, 0.5);
            backdrop-filter: blur(10px);
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            height: 100%;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
                      0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        .card:hover {
            transform: translateY(-5px);
            border-color: rgba(99, 102, 241, 0.5);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2),
                      0 0 15px rgba(99, 102, 241, 0.3);
        }

        .card-body {
            padding: 2rem;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            color: #fff;
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            letter-spacing: -0.5px;
        }

        .card-subtitle {
            color: #818cf8;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .sponsor-details {
            flex-grow: 1;
        }

        .sponsor-details p {
            color: #94a3b8;
            font-size: 0.95rem;
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
            line-height: 1.6;
            letter-spacing: 0.2px;
        }

        .sponsor-details i {
            color: #818cf8;
            margin-right: 0.75rem;
            width: 20px;
            text-align: center;
            font-size: 1rem;
            opacity: 0.9;
        }

        .btn-primary {
            background: linear-gradient(135deg, #818cf8 0%, #6366f1 100%);
            border: none;
            padding: 0.75rem 2rem;
            font-size: 0.875rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            border-radius: 9999px;
            transition: all 0.3s ease;
            color: #fff;
            box-shadow: 0 4px 6px rgba(99, 102, 241, 0.2);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(99, 102, 241, 0.3);
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        }

        .alert-info {
            background: rgba(99, 102, 241, 0.1);
            border: 1px solid rgba(99, 102, 241, 0.2);
            color: #94a3b8;
            padding: 1.5rem;
            border-radius: 1rem;
            font-size: 1.1rem;
            text-align: center;
            margin: 2rem 0;
            backdrop-filter: blur(10px);
        }

        @media (max-width: 768px) {
            .sponsor_section {
                padding: 40px 0;
            }

            .heading_container {
                margin-bottom: 2rem;
            }

            .heading_container h2 {
                font-size: 2rem;
            }

            .card-body {
                padding: 1.5rem;
            }

            .card-title {
                font-size: 1.25rem;
            }

            .sponsor-details p {
                font-size: 0.95rem;
            }

            .btn-primary {
                width: 100%;
                padding: 0.75rem 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <!-- sponsor section -->
    <section class="sponsor_section layout_padding">
        <div class="container">
            <div class="heading_container">
                <h2>Nos Sponsors</h2>
                <p>Découvrez les partenaires qui soutiennent nos événements</p>
            </div>
            <div class="row">
                {% for sponsor in sponsors %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ sponsor.nom_Sp }}</h5>
                                <h6 class="card-subtitle mb-2 text-muted">{{ sponsor.type_Sp }}</h6>
                                <div class="sponsor-details mt-3">
                                    <p><i class="far fa-calendar-alt"></i> Du {{ sponsor.dateDebut ? sponsor.dateDebut|date('d/m/Y') : '' }} au {{ sponsor.dateFin ? sponsor.dateFin|date('d/m/Y') : '' }}</p>
                                    {% if sponsor.gestionMatch %}
                                        <p><i class="fas fa-futbol"></i> Match associé: {{ sponsor.gestionMatch.nom }}</p>
                                    {% endif %}
                                </div>
                                <div class="text-center mt-3">
                                    <a href="{{ path('app_sponsor_front_show', {'id_Sp': sponsor.id_Sp}) }}" class="btn btn-primary">
                                        En savoir plus
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center">
                        <div class="alert alert-info">
                            Aucun sponsor n'est disponible pour le moment.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- end sponsor section -->
{% endblock %}
