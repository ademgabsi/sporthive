{% extends 'Back/base.html.twig' %}

{% block title %}Liste des sponsors{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .content-header {
            padding: 15px 0.5rem;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            margin-bottom: 1.5rem;
        }

        .content-header h1 {
            font-size: 1.8rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0;
        }

        .card {
            box-shadow: 0 0 15px rgba(0,0,0,0.1) !important;
            border: none !important;
            margin-bottom: 1.5rem;
            border-radius: 0.5rem !important;
            background-color: #fff;
            transition: all 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 0 20px rgba(0,0,0,0.15) !important;
        }

        .card-header {
            background-color: #fff !important;
            border-bottom: 1px solid #eee !important;
            padding: 1.25rem 1.5rem !important;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card-header h3.card-title {
            color: #3498db;
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0;
        }

        .card-tools {
            margin-left: auto;
        }

        .card-body {
            padding: 0 !important;
        }

        /* Table Styling */
        .table-responsive {
            margin: 0;
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .table {
            margin-bottom: 0;
            width: 100%;
            background-color: #fff;
        }

        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            padding: 1rem;
            border-bottom: 2px solid #eee;
            color: #2c3e50;
            white-space: nowrap;
        }

        .table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #eee;
            color: #555;
            font-size: 0.9rem;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .table tbody tr:last-child td {
            border-bottom: none;
        }

        /* Button Styling */
        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 0.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            line-height: 1;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            cursor: pointer;
            border: 1px solid transparent;
            border-radius: 0.375rem;
            transition: all 0.2s ease;
            margin: 0 0.125rem;
        }

        .btn i {
            font-size: 0.875rem;
        }

        .btn-sm {
            padding: 0.4rem;
            font-size: 0.875rem;
        }

        .btn-primary {
            color: #fff;
            background-color: #3498db;
            border-color: #3498db;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(50,50,93,.11);
        }

        .btn-info {
            color: #fff;
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-info:hover {
            background-color: #138496;
            border-color: #117a8b;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(23,162,184,.2);
        }

        .btn-warning {
            color: #2c3e50;
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #d39e00;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(255,193,7,.2);
        }

        .btn-danger {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }
        
        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px rgba(220,53,69,.2);
        }

        .text-center {
            color: #6c757d;
            font-style: italic;
        }

        /* Form styling */
        form {
            margin: 0;
            display: inline-block;
        }
        
        /* Styles pour la recherche */
        .search-container {
            margin-bottom: 20px;
            padding: 15px;
        }
        
        .search-input {
            padding: 10px 15px;
            border-radius: 4px;
            border: 1px solid #ddd;
            width: 100%;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        
        .search-input:focus {
            border-color: #3498db;
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.3);
            outline: none;
        }
        
        .filter-container {
            display: flex;
            gap: 10px;
            margin-top: 10px;
            flex-wrap: wrap;
        }
        
        .filter-btn {
            padding: 5px 15px;
            border-radius: 20px;
            border: 1px solid #ddd;
            background: white;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 0.85rem;
        }
        
        .filter-btn:hover, .filter-btn.active {
            background-color: #3498db;
            color: white;
            border-color: #3498db;
        }
        
        .loading-spinner {
            display: none;
            text-align: center;
            padding: 20px;
        }
        
        .loading-spinner i {
            color: #3498db;
            font-size: 2rem;
        }
        
        .highlight {
            background-color: #fff3cd;
        }
        
        /* Styles pour le tri des colonnes */
        .sortable {
            cursor: pointer;
            position: relative;
            user-select: none;
        }
        
        .sortable:hover {
            background-color: rgba(52, 152, 219, 0.1);
        }
        
        .sortable i {
            margin-left: 5px;
            font-size: 0.8rem;
            opacity: 0.5;
        }
        
        .sortable.sort-asc i.fa-sort {
            display: none;
        }
        
        .sortable.sort-asc::after {
            content: "↑";
            margin-left: 5px;
            color: #3498db;
        }
        
        .sortable.sort-desc i.fa-sort {
            display: none;
        }
        
        .sortable.sort-desc::after {
            content: "↓";
            margin-left: 5px;
            color: #3498db;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .content-header h1 {
                font-size: 1.5rem;
            }

            .card-header {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .card-tools {
                width: 100%;
                display: flex;
                justify-content: center;
            }

            .table th,
            .table td {
                font-size: 0.85rem;
                padding: 0.75rem;
                font-size: 0.875rem;
            }

            .btn-group {
                flex-wrap: nowrap;
            }

            .btn-sm {
                padding: 0.375rem;
            }
            
            .filter-container {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Gestion des sponsors</h1>
                    </div>
                </div>
            </div>
        </div>

        <section class="content">
            <div class="container-fluid">
                <!-- Section Statistiques -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-bar mr-2"></i> Statistiques des sponsors
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h4 class="text-center mb-3">Top 5 des sponsors par nombre de matchs sponsorisés</h4>
                                <div class="chart-container" style="position: relative; height:300px; width:100%">
                                    <canvas id="sponsorsChart"></canvas>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4 class="text-center mb-3">Détails</h4>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sponsor</th>
                                                <th>Type</th>
                                                <th>Nombre de matchs</th>
                                                <th>Montant total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for sponsor in topSponsors %}
                                                <tr>
                                                    <td>{{ sponsor.nom_Sp }}</td>
                                                    <td>{{ sponsor.type_Sp }}</td>
                                                    <td class="text-center">
                                                        <span class="badge badge-primary" style="font-size: 1rem">{{ sponsor.match_count }}</span>
                                                    </td>
                                                    <td class="text-right">
                                                        <span class="badge badge-success" style="font-size: 1rem">{{ sponsor.montant_total|number_format(0, ',', ' ') }} €</span>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="4" class="text-center">Aucune donnée disponible</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Liste des sponsors -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Liste des sponsors</h3>
                        <div class="card-tools">
                            <a href="{{ path('app_sponsor_new') }}" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Nouveau sponsor
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom</th>
                                        <th>Type</th>
                                        <th>Montant</th>
                                        <th>Début</th>
                                        <th>Fin</th>
                                        <th>Match</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for sponsor in sponsors %}
                                    <tr>
                                        <td>{{ sponsor.id_Sp }}</td>
                                        <td>{{ sponsor.nom_Sp }}</td>
                                        <td>{{ sponsor.type_Sp }}</td>
                                        <td>{{ sponsor.montantContrat }}</td>
                                        <td>{{ sponsor.dateDebut ? sponsor.dateDebut|date('d/m/Y') : '' }}</td>
                                        <td>{{ sponsor.dateFin ? sponsor.dateFin|date('d/m/Y') : '' }}</td>
                                        <td>{{ sponsor.gestionMatch ? sponsor.gestionMatch.nom : '' }}</td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('app_sponsor_show', {'id_Sp': sponsor.id_Sp}) }}" class="btn btn-info btn-sm" title="Voir">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="{{ path('app_sponsor_edit', {'id_Sp': sponsor.id_Sp}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_sponsor_delete', {'id_Sp': sponsor.id_Sp}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce sponsor ?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sponsor.id_Sp) }}">
                                                    <button class="btn btn-danger btn-sm" title="Supprimer">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8" class="text-center">Aucun sponsor trouvé</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- Inclure Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Récupérer les données des sponsors depuis Twig
            const sponsorsData = [
                {% for sponsor in topSponsors %}
                    {
                        name: "{{ sponsor.nom_Sp }}",
                        count: {{ sponsor.match_count }},
                        montant: {{ sponsor.montant_total }},
                        type: "{{ sponsor.type_Sp }}"
                    }{% if not loop.last %},{% endif %}
                {% endfor %}
            ];
            
            // Si aucune donnée n'est disponible, afficher un message
            if (sponsorsData.length === 0) {
                document.getElementById('sponsorsChart').parentNode.innerHTML = 
                    '<div class="alert alert-info text-center">Aucune donnée statistique disponible</div>';
                return;
            }
            
            // Préparer les données pour le graphique
            const labels = sponsorsData.map(sponsor => sponsor.name);
            const counts = sponsorsData.map(sponsor => sponsor.count);
            const montants = sponsorsData.map(sponsor => sponsor.montant / 1000); // Convertir en milliers d'euros pour l'affichage
            
            // Générer des couleurs en fonction du type de sponsor
            const colors = sponsorsData.map(sponsor => {
                switch(sponsor.type) {
                    case 'delice': return 'rgba(255, 99, 132, 0.7)';
                    case 'secondaire': return 'rgba(54, 162, 235, 0.7)';
                    case 'technique': return 'rgba(255, 206, 86, 0.7)';
                    case 'équipementier': return 'rgba(75, 192, 192, 0.7)';
                    default: return 'rgba(153, 102, 255, 0.7)';
                }
            });
            
            // Créer le graphique
            const ctx = document.getElementById('sponsorsChart').getContext('2d');
            const sponsorsChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: 'Nombre de matchs',
                            data: counts,
                            backgroundColor: colors,
                            borderColor: colors.map(color => color.replace('0.7', '1')),
                            borderWidth: 1,
                            order: 1
                        },
                        {
                            label: 'Montant (k€)',
                            data: montants,
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1,
                            type: 'line',
                            yAxisID: 'y1',
                            order: 0
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                afterLabel: function(context) {
                                    const datasetIndex = context.datasetIndex;
                                    const dataIndex = context.dataIndex;
                                    const sponsor = sponsorsData[dataIndex];
                                    
                                    if (datasetIndex === 0) {
                                        return [
                                            'Type: ' + sponsor.type,
                                            'Montant total: ' + sponsor.montant.toLocaleString('fr-FR') + ' €'
                                        ];
                                    } else {
                                        return [
                                            'Type: ' + sponsor.type,
                                            'Nombre de matchs: ' + sponsor.count
                                        ];
                                    }
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            position: 'left',
                            ticks: {
                                precision: 0
                            },
                            title: {
                                display: true,
                                text: 'Nombre de matchs'
                            }
                        },
                        y1: {
                            beginAtZero: true,
                            position: 'right',
                            grid: {
                                drawOnChartArea: false
                            },
                            title: {
                                display: true,
                                text: 'Montant (k€)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Sponsors'
                            }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
