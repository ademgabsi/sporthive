{% extends 'back/base.html.twig' %}

{% block title %}Liste des Joueurs{% endblock %}

{% block body %}
    <div class="container-fluid px-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="mt-4"><i class="fas fa-users me-2"></i>Gestion des joueurs</h1>
            <div class="d-flex align-items-center">
                <div class="input-group me-3" style="width: 300px;">
                    <input type="text" id="searchInput" class="form-control" placeholder="Rechercher un joueur...">
                    <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
                <a href="{{ path('app_joueur_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Nouveau joueur
                </a>
                <a href="{{ path('app_joueur_export_pdf') }}" class="btn btn-success ms-2">
                    <i class="fas fa-file-pdf me-1"></i> Exporter en PDF
                </a>
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tous les joueurs</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Photo</th>
                                <th>Nom</th>
                                <th>Date de naissance</th>
                                <th>Ã‚ge</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="joueursTableBody">
                            {% include 'joueur/_joueurs_list.html.twig' with {'joueurs': joueurs} %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <style>
        .container-fluid {
            min-width: 1200px;
            max-width: 100%;
            overflow-x: auto;
        }
        .card {
            min-width: 1000px;
            max-width: 100%;
        }
        .table-responsive {
            overflow-x: auto;
            min-height: 0.01%;
        }
        .no-photo {
            border: 1px dashed #ccc;
        }
        .btn-group .btn {
            margin-right: 5px;
        }
        .table th {
            white-space: nowrap;
        }
        .img-thumbnail {
            transition: transform 0.3s;
        }
        .img-thumbnail:hover {
            transform: scale(1.1);
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const clearButton = document.getElementById('clearSearch');
            const joueursTableBody = document.getElementById('joueursTableBody');
            let timeout;

            function search() {
                const searchTerm = searchInput.value.trim();
                const url = '/joueur/search?search=' + encodeURIComponent(searchTerm);
                
                fetch(url)
                    .then(response => response.text())
                    .then(html => {
                        joueursTableBody.innerHTML = html;
                    })
                    .catch(error => {
                        console.error('Erreur:', error);
                    });
            }

            searchInput.addEventListener('input', function() {
                clearTimeout(timeout);
                timeout = setTimeout(search, 300);
            });

            clearButton.addEventListener('click', function() {
                searchInput.value = '';
                search();
            });
        });
    </script>
{% endblock %}
