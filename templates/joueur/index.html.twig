{% extends 'back/base.html.twig' %}

{% block title %}Liste des Joueurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-4">Liste des Joueurs</h1>

        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Tous les joueurs</h6>
                <a href="{{ path('app_joueur_new') }}" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus-circle"></i> Ajouter un joueur
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Photo</th>
                                <th>Nom</th>
                                <th>Date de naissance</th>
                                <th>Âge</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for joueur in joueurs %}
                            <tr>
                                <td>{{ joueur.id }}</td>
                                <td class="text-center">
                                    {% if joueur.photo %}
                                        <img src="{{ asset('uploads/photos/' ~ joueur.photo) }}" 
                                             alt="Photo de {{ joueur.nom }}" 
                                             class="img-thumbnail rounded-circle"
                                             style="width: 60px; height: 60px; object-fit: cover;">
                                    {% else %}
                                        <div class="no-photo bg-light rounded-circle d-flex align-items-center justify-content-center"
                                             style="width: 60px; height: 60px;">
                                            <i class="fas fa-user text-muted"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>{{ joueur.nom }}</td>
                                <td>{{ joueur.dateNaissance ? joueur.dateNaissance|date('d/m/Y') : 'N/A' }}</td>
                                <td>
                                    {% if joueur.dateNaissance %}
                                        {{ 'now'|date('Y') - joueur.dateNaissance|date('Y') }} ans
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_joueur_show', {'id': joueur.id}) }}" 
                                           class="btn btn-info btn-sm" 
                                           title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_joueur_edit', {'id': joueur.id}) }}" 
                                           class="btn btn-warning btn-sm" 
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        {{ include('joueur/_delete_form.html.twig') }}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">Aucun joueur trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <style>
        .no-photo {
            border: 1px dashed #ccc;
        }
        .btn-group .btn {
            margin-right: 5px;
        }
        .table th {
            white-space: nowrap;
        }
        .img-thumbnail {
            transition: transform 0.3s;
        }
        .img-thumbnail:hover {
            transform: scale(1.1);
        }
    </style>
{% endblock %}
