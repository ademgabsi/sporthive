{# templates/joueur/_form.html.twig #}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Ajouter un nouveau joueur</h3>
                </div>
                
                <div class="card-body">
{{ form_start(form, {'attr': {'enctype': 'multipart/form-data', 'class': 'back-form'}}) }}
                    
                    <div class="back-form-group">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'back-form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'back-form-input'}}) }}
                        <div class="back-form-error">
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                    
                    <div class="back-form-group">
                        {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'back-form-label'}}) }}
                        {{ form_widget(form.dateNaissance, {'attr': {'class': 'back-form-input'}}) }}
                        <div class="back-form-error">
                            {{ form_errors(form.dateNaissance) }}
                        </div>
                    </div>
                    
                    <div class="back-form-group">
                        {{ form_label(form.photo, null, {'label_attr': {'class': 'back-form-label'}}) }}
                        {{ form_widget(form.photo, {'attr': {'class': 'back-form-input'}})}}
                        <div class="back-form-error">
                            {{ form_errors(form.photo) }}
                        </div>
                    </div>
                    
                    <div class="back-form-group">
                        {{ form_label(form.equipe, null, {'label_attr': {'class': 'back-form-label'}}) }}
                        {{ form_widget(form.equipe, {'attr': {'class': 'back-form-select'}}) }}
                        <div class="back-form-error">
                            {{ form_errors(form.equipe) }}
                        </div>
                    </div>
                    
                    <div class="back-flex back-justify-end back-mt-4">
                        <button type="submit" class="back-btn back-btn-primary">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
            
            
        </div>
    </div>
</div>

{# Style suppl√©mentaire #}
<style>
    .back-form-input:focus, .back-form-select:focus {
        border-color: #86b7fe;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    .back-form-error {
        display: block;
    }
    .card {
        border-radius: 0.5rem;
    }
</style>