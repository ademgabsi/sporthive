<form method="post" action="{{ path('app_equipe_delete', {'id': equipe.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette équipe ?');" class="back-mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.id) }}">
    <button class="back-btn back-btn-danger">
        <i class="fas fa-trash"></i> Supprimer
    </button>
</form>
