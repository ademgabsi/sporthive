{% extends 'back/base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-users me-2"></i>Gestion des équipes</h1>
        <a href="{{ path('app_equipe_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nouvelle équipe
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <i class="fas fa-table me-1"></i>
            Liste complète des équipes
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="datatablesSimple">
                    <thead class="table-dark">
                        <tr>
                            <th>#ID</th>
                            <th>Logo</th>
                            <th>Nom</th>
                            <th>Ville</th>
                            <th>Année</th>
                            <th>Âge</th>
                            <th>Stade</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for equipe in equipes %}
                        <tr>
                            <td>{{ equipe.id }}</td>
                            <td class="text-center">
                                {% if equipe.logo %}
                                    <img src="{{ asset('uploads/logos/' ~ equipe.logo) }}" 
                                         alt="Logo {{ equipe.nom }}" 
                                         class="img-thumbnail rounded-circle"
                                         style="width: 50px; height: 50px; object-fit: cover;">
                                {% else %}
                                    <div class="no-logo bg-light rounded-circle d-flex align-items-center justify-content-center"
                                         style="width: 50px; height: 50px;">
                                        <i class="fas fa-image text-muted"></i>
                                    </div>
                                {% endif %}
                            </td>
                            <td><strong>{{ equipe.nom }}</strong></td>
                            <td>{{ equipe.ville }}</td>
                            <td>{{ equipe.anneeFondation ? equipe.anneeFondation|date('Y') : 'N/A' }}</td>
                            <td>
                                {% if equipe.anneeFondation %}
                                    {{ 'now'|date('Y') - equipe.anneeFondation|date('Y') }} ans
                                {% endif %}
                            </td>
                            <td>{{ equipe.stade|default('N/A') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_equipe_show', {'id': equipe.id}) }}" 
                                       class="btn btn-sm btn-info"
                                       title="Voir détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" 
                                       class="btn btn-sm btn-warning"
                                       title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('equipe/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                Aucune équipe enregistrée
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<style>
    .no-logo {
        border: 1px dashed #dee2e6;
    }
    .table th {
        white-space: nowrap;
        vertical-align: middle;
    }
    .table td {
        vertical-align: middle;
    }
    .btn-group .btn {
        margin-right: 5px;
    }
    .img-thumbnail {
        transition: transform 0.2s;
    }
    .img-thumbnail:hover {
        transform: scale(1.1);
    }
    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
    }
    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        padding: 1rem 1.5rem;
    }
</style>
{% endblock %}
{% block javascripts %}
<script>
// Active le tooltip sur les boutons
$(document).ready(function(){
    $('[title]').tooltip();
});
</script>
{% endblock %}