{% extends 'back/base.html.twig' %}

{% block title %}Liste des équipes{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4"><i class="fas fa-users me-2"></i>Gestion des équipes</h1>
        <div>
            <a href="{{ path('app_equipe_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Nouvelle équipe
            </a>
            <a href="{{ path('app_equipe_export_pdf') }}" class="btn btn-success ms-2">
                <i class="fas fa-file-pdf me-1"></i> Exporter en PDF
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-table me-1"></i>
                    Liste complète des équipes
                </div>
                <div class="input-group" style="width: 300px;">
                    <input type="text" 
                           id="searchInput" 
                           class="form-control" 
                           placeholder="Rechercher par nom ou ville..." 
                           aria-label="Rechercher">
                    <button class="btn btn-outline-light" type="button" id="clearSearch">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered" id="equipesTable">
                    <thead class="table-dark">
                        <tr>
                            <th>#ID</th>
                            <th>Logo</th>
                            <th>Nom</th>
                            <th>Ville</th>
                            <th>Année</th>
                            <th>Âge</th>
                            <th>Stade</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="equipesTableBody">
                        {% include 'equipe/_equipes_list.html.twig' with {'equipes': pagination} %}
                    </tbody>
                </table>
    <div class="d-flex justify-content-center mt-4">
    {{ knp_pagination_render(pagination) }}
</div>

<style>
    .pagination {
        display: flex;
        padding-left: 0;
        list-style: none;
        background: #fff;
        border-radius: 50px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 10px 20px;
    }

    .page-item {
        margin: 0 6px;
    }

    .page-link {
        border: none;
        border-radius: 30px;
        padding: 10px 18px;
        background: linear-gradient(145deg, #f0f0f0, #ffffff);
        color: #007bff;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
    }

    .page-link:hover {
        background: #007bff;
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 4px 4px 12px rgba(0,123,255,0.3);
    }

    .page-item.active .page-link {
        background: #007bff;
        color: #fff;
        font-weight: bold;
        box-shadow: 4px 4px 12px rgba(0,123,255,0.4);
    }

    .page-link:focus {
        outline: none;
        box-shadow: none;
    }
</style>


            </div>
        </div>
    </div>
</div>
<style>
    .no-logo {
        border: 1px dashed #dee2e6;
    }
    .table th {
        white-space: nowrap;
        vertical-align: middle;
    }
    .table td {
        vertical-align: middle;
    }
    .btn-group .btn {
        margin-right: 5px;
    }
    .img-thumbnail {
        transition: transform 0.2s;
    }
    .img-thumbnail:hover {
        transform: scale(1.1);
    }
    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.15);
    }
    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        padding: 1rem 1.5rem;
    }
    .input-group {
        width: 300px;
    }
    .input-group .form-control {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }
    .input-group .btn {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }
    #searchInput {
        border-right: none;
    }
    #clearSearch {
        border-left: none;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const clearSearch = document.getElementById('clearSearch');
    const equipesTableBody = document.getElementById('equipesTableBody');
    let searchTimeout;

    function performSearch() {
        const searchTerm = searchInput.value.trim();
        
        fetch(`/equipe/search?search=${encodeURIComponent(searchTerm)}`)
            .then(response => response.text())
            .then(html => {
                equipesTableBody.innerHTML = html;
                // Réinitialiser les tooltips si nécessaire
                if (typeof $.fn.tooltip === 'function') {
                    $('[title]').tooltip();
                }
            })
            .catch(error => console.error('Erreur lors de la recherche:', error));
    }

    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(performSearch, 300);
    });

    clearSearch.addEventListener('click', function() {
        searchInput.value = '';
        performSearch();
    });

    // Recherche initiale si un terme est présent dans l'URL
    const urlParams = new URLSearchParams(window.location.search);
    const searchParam = urlParams.get('search');
    if (searchParam) {
        searchInput.value = searchParam;
        performSearch();
    }
});
</script>
{% endblock %}