{% extends 'Back/base.html.twig' %}

{% block title %}Gestion des Réclamations{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles généraux */
        .container-fluid {
            padding: 1.5rem;
        }
        
        /* En-tête et navigation */
        .page-header {
            padding: 1rem 0;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #e9ecef;
        }
        
        .page-title {
            font-size: 1.75rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
        }
        
        .page-title i {
            margin-right: 0.75rem;
            color: #495057;
        }
        
        /* Tableaux */
        .table-responsive {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
            border-radius: 5px;
            overflow: hidden;
        }
        
        .table {
            width: 100%;
            margin-bottom: 0;
        }
        
        .table th {
            background-color: #f8f9fa;
            padding: 1rem;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
            text-align: left;
            position: sticky;
            top: 0;
        }
        
        .table td {
            padding: 1rem;
            vertical-align: middle;
            border-bottom: 1px solid #dee2e6;
        }
        
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.03);
        }
        
        .table-hover tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
        
        /* Badges pour les statuts */
        .badge {
            padding: 0.5rem 0.75rem;
            font-size: 0.75rem;
            font-weight: 500;
            border-radius: 20px;
            display: inline-block;
        }
        
        .badge-pending {
            background-color: #ffc107;
            color: #212529;
        }
        
        .badge-approved {
            background-color: #28a745;
            color: white;
        }
        
        .badge-rejected {
            background-color: #dc3545;
            color: white;
        }
        
        .badge-processing {
            background-color: #17a2b8;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-clipboard-list"></i>Gestion des Réclamations
            </h1>
            
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Montant réclamé</th>
                                <th>Montant remboursé</th>
                                <th>Statut</th>
                                <th>Documents</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reclamation in reclamations %}
                                <tr>
                                    <td>{{ reclamation.ID_reclamation }}</td>
                                    <td>{{ reclamation.Date ? reclamation.Date|date('d/m/Y') : '' }}</td>
                                    <td>
                                        {% if reclamation.Description|length > 50 %}
                                            {{ reclamation.Description|slice(0, 50) }}...
                                        {% else %}
                                            {{ reclamation.Description }}
                                        {% endif %}
                                    </td>
                                    <td>{{ reclamation.Montantreclame|number_format(2, ',', ' ') }} TND</td>
                                    <td>{{ reclamation.Montantrembourse|number_format(2, ',', ' ') }} TND</td>
                                    <td>
                                        {% set badgeClass = '' %}
                                        {% if reclamation.Etat == 'En attente' %}
                                            {% set badgeClass = 'badge-pending' %}
                                        {% elseif reclamation.Etat == 'Approuvée' %}
                                            {% set badgeClass = 'badge-approved' %}
                                        {% elseif reclamation.Etat == 'Rejetée' %}
                                            {% set badgeClass = 'badge-rejected' %}
                                        {% elseif reclamation.Etat == 'En traitement' %}
                                            {% set badgeClass = 'badge-processing' %}
                                        {% endif %}
                                        <span class="badge {{ badgeClass }}">{{ reclamation.Etat }}</span>
                                    </td>
                                    <td>
                                        {% if reclamation.Documents %}
                                            <a href="#" class="text-primary" data-bs-toggle="modal" data-bs-target="#docModal{{ reclamation.ID_reclamation }}">
                                                <i class="fas fa-file-alt"></i> Voir
                                            </a>
                                        {% else %}
                                            <span class="text-muted">Aucun document</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="{{ path('app_admin_reclamation_show', {'ID_reclamation': reclamation.ID_reclamation}) }}" class="btn btn-info btn-sm me-2">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_admin_reclamation_edit', {'ID_reclamation': reclamation.ID_reclamation}) }}" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Aucune réclamation trouvée
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
