{% extends 'base.html.twig' %}

{% block title %}Liste des Réclamations{% endblock %}

{% block css %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<style>
    .table-responsive {
        overflow-x: auto;
    }
    .document-link {
        display: flex;
        align-items: center;
    }
    .document-link i {
        margin-right: 5px;
    }
    .reclamation-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        padding: 20px;
    }
    .reclamation-header {
        background-color: #0d6efd;
        color: white;
        padding: 15px 20px;
        border-radius: 10px 10px 0 0;
        margin: -20px -20px 20px -20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .reclamation-header h3 {
        margin: 0;
        font-size: 1.5rem;
    }
    .btn-light {
        background-color: #f8f9fa;
        color: #212529;
    }
    .btn-sm {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="reclamation-card">
           

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>État</th>
                    <th>Montant réclamé</th>
                    <th>Montant remboursé</th>
                    <th>Documents</th>
                    <th>Actions</th>
                </tr>
            </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.ID_reclamation }}</td>
                <td>{{ reclamation.Date ? reclamation.Date|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.Description }}</td>
                <td>{{ reclamation.Etat }}</td>
                <td>{{ reclamation.Montantreclame }}</td>
                <td>{{ reclamation.Montantrembourse }}</td>
                <td>
                    {% if reclamation.Documents %}
                        <a href="{{ asset('fichier_reclamation/' ~ reclamation.Documents) }}" target="_blank" class="document-link text-decoration-none">
                            <i class="fas fa-file-pdf text-danger"></i>
                            Voir
                        </a>
                    {% else %}
                        <span class="text-muted">Aucun</span>
                    {% endif %}
                </td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('app_reclamation_show', {'ID_reclamation': reclamation.ID_reclamation}) }}" class="btn btn-sm btn-info me-1">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="{{ path('app_reclamation_edit', {'ID_reclamation': reclamation.ID_reclamation}) }}" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
        </div>
    </div>
{% endblock %}
