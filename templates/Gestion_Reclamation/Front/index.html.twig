{% extends 'base.html.twig' %}

{% block title %}Mes Réclamations - SPORTHIVE{% endblock %}

{% block css %}
<style>
    .reclamation-section {
        padding: 120px 0 80px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

    .section-header h2 {
        font-size: 2.5rem;
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .section-header p {
        color: #6c757d;
        font-size: 1.1rem;
        max-width: 700px;
        margin: 0 auto;
    }

    .section-header::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #4a90e2, #67b8e3);
        border-radius: 2px;
    }

    .reclamation-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;
        overflow: hidden;
        transition: all 0.3s ease;
        animation: fadeInUp 0.6s ease-out forwards;
    }

    .reclamation-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
    }

    .reclamation-header {
        background: linear-gradient(90deg, #4a90e2, #67b8e3);
        padding: 20px;
        color: white;
        position: relative;
    }

    .reclamation-header h3 {
        margin: 0;
        font-size: 1.3rem;
        font-weight: 600;
        padding-right: 100px;
    }

    .status-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 5px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
    }

    .status-badge.pending {
        background: linear-gradient(90deg, #ffc107, #ff9800);
        color: white;
    }

    .status-badge.approved {
        background: linear-gradient(90deg, #28a745, #20c997);
        color: white;
    }

    .status-badge.rejected {
        background: linear-gradient(90deg, #dc3545, #c82333);
        color: white;
    }

    .reclamation-content {
        padding: 25px;
    }

    .info-group {
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 1px solid #eee;
    }

    .info-group:last-child {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }

    .info-label {
        color: #6c757d;
        font-weight: 600;
        margin-bottom: 8px;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
    }

    .info-label i {
        margin-right: 8px;
        color: #4a90e2;
    }

    .info-value {
        color: #2c3e50;
        font-size: 1rem;
        line-height: 1.5;
    }

    .montants-section {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        margin: 20px 0;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 20px;
    }

    .montant-item {
        text-align: center;
    }

    .montant-item .info-label {
        justify-content: center;
        color: #495057;
    }

    .montant-item .info-value {
        font-size: 1.5rem;
        font-weight: 600;
        color: #2c3e50;
    }

    .documents-section {
        margin-top: 20px;
    }

    .document-link {
        display: inline-flex;
        align-items: center;
        padding: 8px 15px;
        background: #f8f9fa;
        border-radius: 8px;
        color: #4a90e2;
        text-decoration: none;
        margin-right: 10px;
        margin-bottom: 10px;
        transition: all 0.3s ease;
    }

    .document-link:hover {
        background: #e9ecef;
        color: #2c3e50;
        transform: translateY(-2px);
    }

    .document-link i {
        margin-right: 8px;
    }

    .actions-section {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-action {
        flex: 1;
        padding: 12px 20px;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-action i {
        margin-right: 8px;
    }

    .btn-action.primary {
        background: linear-gradient(90deg, #4a90e2, #67b8e3);
        color: white;
    }

    .btn-action.primary:hover {
        background: linear-gradient(90deg, #67b8e3, #4a90e2);
        transform: translateY(-2px);
    }

    .btn-action.secondary {
        background: linear-gradient(90deg, #6c757d, #495057);
        color: white;
    }

    .btn-action.secondary:hover {
        background: linear-gradient(90deg, #495057, #6c757d);
        transform: translateY(-2px);
    }

    .empty-state {
        text-align: center;
        padding: 50px 20px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }

    .empty-state h3 {
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .empty-state p {
        color: #6c757d;
        margin-bottom: 25px;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .row > div:nth-child(1) .reclamation-card { animation-delay: 0.1s; }
    .row > div:nth-child(2) .reclamation-card { animation-delay: 0.2s; }
    .row > div:nth-child(3) .reclamation-card { animation-delay: 0.3s; }
    .row > div:nth-child(4) .reclamation-card { animation-delay: 0.4s; }
</style>
{% endblock %}

