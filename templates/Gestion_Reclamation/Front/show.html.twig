{% extends 'base.html.twig' %}

{% block title %}Détails de la Réclamation - SPORTHIVE{% endblock %}

{% block css %}
<style>
    .reclamation-details {
        padding: 120px 0 80px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .section-header {
        text-align: center;
        margin-bottom: 50px;
        position: relative;
    }

    .section-header h2 {
        font-size: 2.5rem;
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 15px;
    }

    .section-header::after {
        content: '';
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        width: 80px;
        height: 4px;
        background: linear-gradient(90deg, #4a90e2, #67b8e3);
        border-radius: 2px;
    }

    .details-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
        animation: fadeInUp 0.6s ease-out forwards;
    }

    .details-header {
        background: linear-gradient(90deg, #4a90e2, #67b8e3);
        padding: 30px;
        color: white;
        position: relative;
    }

    .details-header h3 {
        font-size: 1.8rem;
        font-weight: 600;
        margin: 0 0 10px;
    }

    .status-badge {
        display: inline-block;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
        margin-top: 10px;
    }

    .status-badge.pending {
        background: linear-gradient(90deg, #ffc107, #ff9800);
        color: white;
    }

    .status-badge.approved {
        background: linear-gradient(90deg, #28a745, #20c997);
        color: white;
    }

    .status-badge.rejected {
        background: linear-gradient(90deg, #dc3545, #c82333);
        color: white;
    }

    .details-content {
        padding: 30px;
    }

    .info-section {
        margin-bottom: 30px;
        padding-bottom: 30px;
        border-bottom: 1px solid #eee;
    }

    .info-section:last-child {
        margin-bottom: 0;
        padding-bottom: 0;
        border-bottom: none;
    }

    .info-section h4 {
        color: #2c3e50;
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    .info-section h4 i {
        margin-right: 10px;
        color: #4a90e2;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .info-item {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
    }

    .info-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 5px;
    }

    .info-value {
        color: #2c3e50;
        font-size: 1.1rem;
        font-weight: 500;
    }

    .description-box {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        margin-top: 15px;
    }

    .description-box p {
        color: #2c3e50;
        line-height: 1.6;
        margin: 0;
    }

    .documents-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
        margin-top: 15px;
    }

    .document-card {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        transition: all 0.3s ease;
    }

    .document-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .document-icon {
        font-size: 2rem;
        color: #4a90e2;
        margin-bottom: 10px;
    }

    .document-name {
        color: #2c3e50;
        font-size: 0.9rem;
        margin: 0;
    }

    .actions-section {
        display: flex;
        gap: 15px;
        margin-top: 30px;
    }

    .btn-action {
        flex: 1;
        padding: 15px 25px;
        border: none;
        border-radius: 10px;
        font-weight: 500;
        font-size: 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-action i {
        margin-right: 10px;
    }

    .btn-action.primary {
        background: linear-gradient(90deg, #4a90e2, #67b8e3);
        color: white;
    }

    .btn-action.primary:hover {
        background: linear-gradient(90deg, #67b8e3, #4a90e2);
        transform: translateY(-2px);
    }

    .btn-action.secondary {
        background: linear-gradient(90deg, #6c757d, #495057);
        color: white;
    }

    .btn-action.secondary:hover {
        background: linear-gradient(90deg, #495057, #6c757d);
        transform: translateY(-2px);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}

{% block body %}
    <section class="reclamation-details">
        <div class="container">
            <div class="section-header">
                <h2>Détails de la Réclamation</h2>
            </div>

            <div class="details-card">
                <div class="details-header">
                    <h3>Réclamation #{{ reclamation.ID_reclamation }}</h3>
                    <span class="status-badge {{ reclamation.Etat|lower }}">
                        {{ reclamation.Etat }}
                    </span>
                </div>

                <div class="details-content">
                    <!-- Informations générales -->
                    <div class="info-section">
                        <h4>
                            <i class="fas fa-info-circle"></i>
                            Informations générales
                        </h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-label">Date de soumission</div>
                                <div class="info-value">{{ reclamation.Date|date('d/m/Y') }}</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">État actuel</div>
                                <div class="info-value">{{ reclamation.Etat }}</div>
                            </div>
                        </div>
                    </div>

                    <!-- Montants -->
                    <div class="info-section">
                        <h4>
                            <i class="fas fa-money-bill-wave"></i>
                            Informations financières
                        </h4>
                        <div class="info-grid">
                            <div class="info-item">
                                <div class="info-label">Montant réclamé</div>
                                <div class="info-value">{{ reclamation.montantReclame }} TND</div>
                            </div>
                            {% if reclamation.montantRembourse is not null %}
                                <div class="info-item">
                                    <div class="info-label">Montant remboursé</div>
                                    <div class="info-value">{{ reclamation.montantRembourse }} TND</div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="info-section">
                        <h4>
                            <i class="fas fa-align-left"></i>
                            Description de la réclamation
                        </h4>
                        <div class="description-box">
                            <p>{{ reclamation.Description }}</p>
                        </div>
                    </div>

                    <!-- Documents -->
                    {% if reclamation.Documents %}
                        <div class="info-section">
                            <h4>
                                <i class="fas fa-paperclip"></i>
                                Documents joints
                            </h4>
                            <div class="documents-grid">
                                {% for document in reclamation.Documents|split(',') %}
                                    <div class="document-card">
                                        <div class="document-icon">
                                            <i class="fas fa-file"></i>
                                        </div>
                                        <p class="document-name">Document {{ loop.index }}</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    <!-- Actions -->
                    <div class="actions-section">
                        <a href="{{ path('app_reclamation_index') }}" class="btn-action secondary">
                            <i class="fas fa-arrow-left"></i>
                            Retour à la liste
                        </a>
                        {% if reclamation.Etat == 'En attente' %}
                            <a href="{{ path('app_reclamation_edit', {'ID_reclamation': reclamation.ID_reclamation}) }}" class="btn-action primary">
                                <i class="fas fa-edit"></i>
                                Modifier la réclamation
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
