{# Gestion_Reclamation/Front/_form.html.twig #}

<div class="form-container">
    {{ form_start(form, {'attr': {'class': 'reclamation-form'}}) }}
        <div class="form-header">
            <div class="form-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <h2 class="form-title">{{ button_label|default('Save') == 'Update' ? 'Modifier votre réclamation' : 'Soumettre une réclamation' }}</h2>
        </div>
        
        <div class="form-body">
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div class="form-group">
                        {% if field.vars.name == 'etat' %}
                            {# Définir l'état par défaut à "En cours" #}
                            {{ form_label(field) }}
                            {% if field.vars.required %}<span class="required-star">*</span>{% endif %}
                            {{ form_widget(field, {'attr': {'class': 'custom-input'}, 'value': 'En cours'}) }}
                            <div class="form-note">Valeur par défaut: En cours</div>
                        {% elseif field.vars.name == 'montantRembourse' %}
                            {# Définir le montant remboursé par défaut à 0 #}
                            {{ form_label(field) }}
                            {% if field.vars.required %}<span class="required-star">*</span>{% endif %}
                            {{ form_widget(field, {'attr': {'class': 'custom-input'}, 'value': 0}) }}
                            <div class="form-note">Valeur par défaut: 0</div>
                        {% elseif field.vars.name == 'date' or field.vars.name == 'dateReclamation' %}
                            {# Définir la date par défaut à aujourd'hui #}
                            {{ form_label(field) }}
                            {% if field.vars.required %}<span class="required-star">*</span>{% endif %}
                            {{ form_widget(field, {'attr': {'class': 'custom-input'}, 'value': "now"|date("Y-m-d")}) }}
                            <div class="form-note">Date d'aujourd'hui par défaut</div>
                        {% else %}
                            <div class="form-label">
                                {{ form_label(field) }}
                                {% if field.vars.required %}
                                    <span class="required-star">*</span>
                                {% endif %}
                            </div>
                            <div class="form-input">
                                {{ form_widget(field, {'attr': {'class': 'custom-input'}}) }}
                            </div>
                        {% endif %}
                        <div class="form-error">
                            {{ form_errors(field) }}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div class="form-footer">
            <button type="submit" class="btn-submit">
                <span class="btn-icon">
                    <i class="fas fa-{{ button_label|default('Save') == 'Update' ? 'sync' : 'paper-plane' }}"></i>
                </span>
                <span class="btn-text">{{ button_label|default('Enregistrer') }}</span>
            </button>
        </div>
    {{ form_end(form) }}
</div>

<style>
.form-container {
    max-width: 800px;
    margin: 0 auto;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 6px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
}

.form-container:hover {
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
    transform: translateY(-5px);
}

.form-header {
    background: linear-gradient(135deg, #6e8efb, #a777e3);
    padding: 25px;
    text-align: center;
    color: white;
    position: relative;
    border-radius: 10px 10px 0 0;
}

.form-icon {
    font-size: 32px;
    margin-bottom: 10px;
}

.form-title {
    font-size: 24px;
    font-weight: 600;
    margin: 0;
}

.form-body {
    padding: 30px;
    background: #f9fafc;
}

.form-group {
    margin-bottom: 25px;
}

.form-label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #344767;
    font-size: 14px;
}

.required-star {
    color: #ff4b6e;
    margin-left: 4px;
}

.form-input .custom-input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid #e0e6ed;
    border-radius: 8px;
    background-color: white;
    font-size: 14px;
    transition: all 0.2s ease;
}

.form-input .custom-input:focus {
    border-color: #a777e3;
    box-shadow: 0 0 0 3px rgba(167, 119, 227, 0.2);
    outline: none;
}

.form-error {
    color: #ff4b6e;
    font-size: 12px;
    margin-top: 5px;
}

.form-note {
    color: #6c757d;
    font-size: 12px;
    font-style: italic;
    margin-top: 5px;
}

.form-footer {
    padding: 20px 30px;
    background: white;
    border-top: 1px solid #f0f0f0;
    text-align: right;
}

.btn-submit {
    background: linear-gradient(135deg, #6e8efb, #a777e3);
    color: white;
    border: none;
    padding: 12px 25px;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.btn-submit:hover {
    background: linear-gradient(135deg, #5d7ce7, #9668d0);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(110, 142, 251, 0.3);
}

.btn-icon {
    font-size: 16px;
}

/* Animation pour les champs */
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.form-group {
    animation: fadeIn 0.5s ease backwards;
}

.form-group:nth-child(1) { animation-delay: 0.1s; }
.form-group:nth-child(2) { animation-delay: 0.2s; }
.form-group:nth-child(3) { animation-delay: 0.3s; }
.form-group:nth-child(4) { animation-delay: 0.4s; }
.form-group:nth-child(5) { animation-delay: 0.5s; }

/* Responsive */
@media (max-width: 768px) {
    .form-container {
        margin: 0 15px;
    }
    
    .form-body {
        padding: 20px;
    }
}
</style>