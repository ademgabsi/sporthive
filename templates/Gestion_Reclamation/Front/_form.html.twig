{# Gestion_Reclamation/Front/_form.html.twig #}

<div class="form-container">
    {{ form_start(form, {'attr': {'class': 'reclamation-form'}}) }}
        <div class="form-header">
            <div class="form-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <h2 class="form-title">{{ button_label|default('Save') == 'Update' ? 'Modifier votre réclamation' : 'Soumettre une réclamation' }}</h2>
        </div>
        
        <div class="form-body">
            {% for field in form %}
                {% if field.vars.name != '_token' %}
                    <div class="form-group">
                        {% if field.vars.name == 'etat' %}
                            {# Définir l'état par défaut à "En cours" #}
                            {{ form_label(field) }}
                            {% if field.vars.required %}<span class="required-star">*</span>{% endif %}
                            {{ form_widget(field, {'attr': {'class': 'custom-input'}, 'value': 'En cours'}) }}
                            <div class="form-note">Valeur par défaut: En cours</div>
                        {% elseif field.vars.name == 'montantRembourse' %}
                            {# Définir le montant remboursé par défaut à 0 #}
                            {{ form_label(field) }}
                            {% if field.vars.required %}<span class="required-star">*</span>{% endif %}
                            {{ form_widget(field, {'attr': {'class': 'custom-input'}, 'value': 0}) }}
                            <div class="form-note">Valeur par défaut: 0</div>
                        {% elseif field.vars.name == 'date' or field.vars.name == 'dateReclamation' %}
                            {# Définir la date par défaut à aujourd'hui #}
                            {{ form_label(field) }}
                            {% if field.vars.required %}<span class="required-star">*</span>{% endif %}
                            {{ form_widget(field, {'attr': {'class': 'custom-input'}, 'value': "now"|date("Y-m-d")}) }}
                            <div class="form-note">Date d'aujourd'hui par défaut</div>
                        {% else %}
                            <div class="form-label">
                                {{ form_label(field) }}
                                {% if field.vars.required %}
                                    <span class="required-star">*</span>
                                {% endif %}
                            </div>
                            <div class="form-input">
                                {{ form_widget(field, {'attr': {'class': 'custom-input'}}) }}
                            </div>
                        {% endif %}
                        <div class="form-error">
                            {{ form_errors(field) }}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>

        <div class="form-footer">
            <button type="submit" class="btn-submit">
                <span class="btn-icon">
                    <i class="fas fa-{{ button_label|default('Save') == 'Update' ? 'sync' : 'paper-plane' }}"></i>
                </span>
                <span class="btn-text">{{ button_label|default('Enregistrer') }}</span>
            </button>
        </div>
    {{ form_end(form) }}
</div>

