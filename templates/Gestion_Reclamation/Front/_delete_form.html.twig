<form method="post" action="{{ path('app_reclamation_delete', {'ID_reclamation': reclamation.ID_reclamation}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.ID_reclamation) }}">
    <button class="{{ button_class|default('btn btn-danger') }}">
        <i class="fas fa-trash-alt me-1"></i>
        {{ button_label|default('Supprimer') }}
    </button>
</form>
