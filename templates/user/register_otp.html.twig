{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">
    <style>
        .step-container {
            position: relative;
            margin-bottom: 3rem;
        }
        
        .step-number {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #dc3545;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-weight: bold;
            margin-right: 1.5rem;
            position: relative;
            z-index: 2;
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
            transition: all 0.3s ease;
        }
        
        .step-container:hover .step-number {
            transform: scale(1.1);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.4);
        }
        
        .step-content {
            flex: 1;
        }
        
        .step-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #343a40;
        }
        
        .step-description {
            color: #6c757d;
            margin-bottom: 1rem;
        }
        
        .qr-code-container {
            background-color: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin: 0 auto;
            max-width: 250px;
            transition: all 0.3s ease;
        }
        
        .qr-code-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }
        
        .secret-key {
            background-color: #f8f9fa;
            border: 1px dashed #ced4da;
            border-radius: 5px;
            padding: 10px;
            font-family: monospace;
            letter-spacing: 2px;
            text-align: center;
            position: relative;
            cursor: pointer;
            transition: all 0.2s ease;
            font-size: 1rem;
            font-weight: 600;
            margin: 1rem auto;
            max-width: 80%;
            color: #495057;
        }
        
        .secret-key:hover {
            background-color: #e9ecef;
        }
        
        .secret-key:after {
            content: "Cliquer pour copier";
            position: absolute;
            top: -25px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 3px 8px;
            border-radius: 3px;
            font-size: 12px;
            opacity: 0;
            transition: opacity 0.2s;
            pointer-events: none;
        }
        
        .secret-key:hover:after {
            opacity: 1;
        }
        
        .otp-input {
            letter-spacing: 16px;
            font-size: 24px;
            padding-left: 20px;
            font-weight: 700;
            text-align: center;
            transition: all 0.3s ease;
        }
        
        .otp-input:focus {
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.25);
            transform: scale(1.01);
        }
        
        .timer-container {
            width: 80px;
            height: 80px;
            margin: 0 auto;
            position: relative;
            margin-bottom: 15px;
        }
        
        .timer-circle {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: conic-gradient(#dc3545 0% var(--progress), #e9ecef var(--progress) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }
        
        .timer-circle::before {
            content: '';
            position: absolute;
            width: 70%;
            height: 70%;
            background-color: white;
            border-radius: 50%;
        }
        
        .timer-text {
            position: relative;
            font-size: 1.5rem;
            font-weight: bold;
            color: #dc3545;
            z-index: 2;
        }
        
        .btn-verify {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .btn-verify:before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: all 0.6s;
        }
        
        .btn-verify:hover:before {
            left: 100%;
        }
        
        .progress-steps {
            height: 6px;
            background: #e9ecef;
            border-radius: 10px;
            margin-bottom: 20px;
            position: relative;
            overflow: hidden;
        }
        
        .progress-bar-steps {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            background: #dc3545;
            border-radius: 10px;
            width: 66.67%;
            transition: width 0.5s ease;
        }
        
        .app-badge {
            transition: all 0.3s ease;
        }
        
        .app-badge:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.4); }
            70% { box-shadow: 0 0 0 10px rgba(220, 53, 69, 0); }
            100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); }
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        /* Nouveau style QR code */
        .qr-container {
            margin: 30px 0;
        }
        
        .qr-code-wrapper {
            position: relative;
            width: 220px;
            height: 220px;
            margin: 0 auto;
            padding: 10px;
            background-color: white;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            border-radius: 10px;
            transition: all 0.4s ease;
        }
        
        .qr-code-wrapper:hover {
            transform: scale(1.05);
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
        }
        
        .qr-code-container {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
        }
        
        .qr-code-container svg {
            max-width: 100%;
            max-height: 100%;
            display: block;
            margin: 0 auto;
        }
        
        .qr-corner {
            position: absolute;
            width: 20px;
            height: 20px;
            border-color: #dc3545;
            z-index: 2;
        }
        
        .top-left {
            top: 5px;
            left: 5px;
            border-top: 3px solid;
            border-left: 3px solid;
            border-radius: 8px 0 0 0;
        }
        
        .top-right {
            top: 5px;
            right: 5px;
            border-top: 3px solid;
            border-right: 3px solid;
            border-radius: 0 8px 0 0;
        }
        
        .bottom-left {
            bottom: 5px;
            left: 5px;
            border-bottom: 3px solid;
            border-left: 3px solid;
            border-radius: 0 0 0 8px;
        }
        
        .bottom-right {
            bottom: 5px;
            right: 5px;
            border-bottom: 3px solid;
            border-right: 3px solid;
            border-radius: 0 0 8px 0;
        }
        
        .secret-key-container {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
        
        .secret-key-container:hover {
            box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            transform: translateY(-5px);
        }
        
        .secret-key-input {
            font-family: monospace;
            font-size: 1rem;
            letter-spacing: 1px;
            font-weight: 600;
            color: #495057;
        }
        
        @media (max-width: 767.98px) {
            .qr-container .col-md-6:first-child {
                margin-bottom: 30px;
            }
        }
    </style>
{% endblock %}

