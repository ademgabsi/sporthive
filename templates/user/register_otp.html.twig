{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>
    
    <!-- Stockage des donnÃ©es Twig dans des attributs data d'un Ã©lÃ©ment cachÃ© -->
    <div id="twigData" 
         data-has-error="{% if error is defined and error %}true{% else %}false{% endif %}"
         data-error-message="{% if error is defined and error %}{{ error|e('html_attr') }}{% endif %}"
         style="display:none;"></div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // RÃ©cupÃ©ration des donnÃ©es Twig
            var twigData = document.getElementById('twigData');
            var hasError = twigData.getAttribute('data-has-error') === 'true';
            var errorMessage = twigData.getAttribute('data-error-message');
            
            // Initialiser les animations
            new WOW().init();
            
            // Gestion des erreurs avec SweetAlert2
            if (hasError) {
                Swal.fire({
                    title: 'Erreur !',
                    text: errorMessage,
                    icon: 'error',
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'RÃ©essayer'
                });
            }
            
            // Fix QR code SVG centering and size
            var qrSvg = document.querySelector('.qr-code-container svg');
            if (qrSvg) {
                qrSvg.setAttribute('width', '180');
                qrSvg.setAttribute('height', '180');
                qrSvg.style.display = 'block';
                qrSvg.style.margin = '0 auto';
            }
            
            // Copier la clÃ© secrÃ¨te au clic
            var secretKey = document.getElementById('secret-key');
            var copyBtn = document.getElementById('copy-btn');
            
            if (copyBtn && secretKey) {
                copyBtn.addEventListener('click', function() {
                    var text = secretKey.value;
                    navigator.clipboard.writeText(text).then(function() {
                        Swal.fire({
                            position: 'center',
                            icon: 'success',
                            title: 'ClÃ© copiÃ©e !',
                            text: 'La clÃ© secrÃ¨te a Ã©tÃ© copiÃ©e dans le presse-papier',
                            showConfirmButton: false,
                            timer: 1500
                        });
                    }).catch(function() {
                        Swal.fire({
                            icon: 'error',
                            title: 'Erreur',
                            text: 'Impossible de copier la clÃ©. Veuillez la sÃ©lectionner et copier manuellement.',
                            confirmButtonColor: '#dc3545'
                        });
                    });
                });
            }
            
            // Gestion de l'input OTP
            var otpInput = document.getElementById('otp-input');
            var otpForm = document.getElementById('otp-form');
            var digitHelper = document.getElementById('digit-helper');
            
            if (otpInput && otpForm && digitHelper) {
                otpInput.addEventListener('input', function() {
                    // Nettoyer l'entrÃ©e (uniquement des chiffres)
                    this.value = this.value.replace(/[^0-9]/g, '');
                    
                    // Afficher les chiffres saisis avec animation
                    if (this.value.length > 0) {
                        var html = '';
                        for (var i = 0; i < this.value.length; i++) {
                            html += '<span class="digit" style="animation-delay: ' + (i * 0.1) + 's">' + this.value[i] + '</span>';
                        }
                        for (var j = this.value.length; j < 6; j++) {
                            html += '<span class="text-muted">â¢</span>';
                        }
                        digitHelper.innerHTML = html;
                    } else {
                        digitHelper.innerHTML = '<span class="text-muted">Entrez le code Ã  6 chiffres gÃ©nÃ©rÃ© par l\'application</span>';
                    }
                    
                    // Auto-submit quand 6 chiffres sont entrÃ©s
                    if (this.value.length === 6) {
                        setTimeout(function() {
                            Swal.fire({
                                title: 'VÃ©rification...',
                                text: 'Nous vÃ©rifions votre code',
                                icon: 'info',
                                allowOutsideClick: false,
                                showConfirmButton: false,
                                willOpen: function() {
                                    Swal.showLoading();
                                    setTimeout(function() {
                                        otpForm.submit();
                                    }, 1000);
                                }
                            });
                        }, 300);
                    }
                });
                
                // Compteur de temps
                var countdown = document.getElementById('countdown');
                var timerCircle = document.querySelector('.timer-circle');
                
                if (countdown && timerCircle) {
                    var timeLeft = 30;
                    
                    function updateTimer() {
                        if (timeLeft <= 0) {
                            timeLeft = 30;
                        }
                        countdown.textContent = timeLeft;
                        
                        // Mettre Ã  jour le gradient du cercle de progression
                        var progress = (timeLeft / 30) * 100;
                        timerCircle.style.setProperty('--progress', progress + '%');
                        
                        timeLeft--;
                    }
                    
                    // Mise Ã  jour initiale
                    updateTimer();
                    
                    // Mettre Ã  jour toutes les secondes
                    setInterval(updateTimer, 1000);
                }
                
                // Focus automatique sur l'input
                otpInput.focus();
            }
        });
    </script>
