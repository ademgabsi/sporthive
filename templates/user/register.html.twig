{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ parent() }}{% endblock %}

{% block header %}
    <header class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <span>SPORTHIVE</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="d-flex ml-auto flex-column flex-lg-row align-items-center">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
{% endblock %}

{% block body %}
<section class="heathy_section layout_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 wow fadeInUp" data-wow-delay="0.3s">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-danger text-white text-center py-4">
                        <h3 class="mb-0 font-weight-bold">Créer un compte</h3>
                    </div>
                    <div class="card-body p-5" style="background-color: #f8f9fa;">
                        {% if error is defined and error %}
                            <div class="alert alert-danger">
                                {{ error }}
                            </div>
                        {% endif %}
                        
                        <form method="POST" action="{{ path('app_user_register_step1_submit') }}" class="wow fadeIn" data-wow-delay="0.5s">
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="text-dark font-weight-bold">Nom *</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-secondary text-white"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input type="text" name="nom" class="form-control" required placeholder="Votre nom">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label class="text-dark font-weight-bold">Prénom *</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-secondary text-white"><i class="fa fa-user"></i></span>
                                        </div>
                                        <input type="text" name="prenom" class="form-control" required placeholder="Votre prénom">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="text-dark font-weight-bold">Email *</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-secondary text-white"><i class="fa fa-envelope"></i></span>
                                    </div>
                                    <input type="email" name="email" class="form-control" required placeholder="Votre email">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="text-dark font-weight-bold">Numéro de téléphone *</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-secondary text-white"><i class="fa fa-phone"></i></span>
                                        </div>
                                        <input type="tel" name="numero_tel" class="form-control" required placeholder="Votre numéro">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label class="text-dark font-weight-bold">Date de naissance</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-secondary text-white"><i class="fa fa-calendar"></i></span>
                                        </div>
                                        <input type="date" name="date_naissance" class="form-control">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label class="text-dark font-weight-bold">Adresse</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-secondary text-white"><i class="fa fa-home"></i></span>
                                    </div>
                                    <input type="text" name="adresse" class="form-control" placeholder="Votre adresse">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label class="text-dark font-weight-bold">Mot de passe *</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-secondary text-white"><i class="fa fa-lock"></i></span>
                                        </div>
                                        <input type="password" name="password" class="form-control" required placeholder="Votre mot de passe">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label class="text-dark font-weight-bold">Confirmer le mot de passe *</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-secondary text-white"><i class="fa fa-lock"></i></span>
                                        </div>
                                        <input type="password" name="confirm_password" class="form-control" required placeholder="Confirmez votre mot de passe">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-4">
                                <div class="form-check">
                                    <input type="checkbox" name="agreeTerms" class="form-check-input" required id="agreeTerms">
                                    <label class="form-check-label text-dark" for="agreeTerms">J'accepte les conditions d'utilisation</label>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-danger btn-lg btn-block wow pulse" data-wow-delay="0.7s">
                                    <i class="fa fa-user-plus mr-2"></i> S'inscrire
                                </button>
                            </div>

                            <div class="text-center mt-4">
                                <span class="text-muted">Déjà inscrit?</span> 
                                <a href="{{ path('app_login') }}" class="text-danger font-weight-bold">
                                    Se connecter <i class="fa fa-arrow-right ml-1"></i>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block js %}
    <!-- WOW.js for animations -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
{% endblock %}
